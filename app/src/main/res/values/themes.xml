<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.ANDCSocials" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGradientStart</item>
        <item name="colorPrimaryVariant">@color/colorGradientCenter</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:autofilledHighlight">@color/transparent</item>

        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:divider">@drawable/menu_item_padding</item>
        <item name="divider">@drawable/menu_item_padding</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorGradientStart</item>

        <!-- Customize your theme here. -->

        <!--item name="android:actionBarStyle">@style/ThemeActionBar</item-->
        <!--item name="actionBarSize">62dp</item-->
        <!--item name="android:windowActionBarOverlay">true</item-->

        <!-- Support library compatibility -->
        <!--item name="actionBarStyle">@style/ThemeActionBar</item-->
