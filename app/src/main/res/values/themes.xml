        <!--item name="textInputStyle">@style/Widget.App.ExposedDropdownMenu</item-->

        <!--item name="android:actionMenuTextColor">@color/colorGradientStart</item-->
    </style>

    <!-- App Dialog Theme -->
    <style name="Theme.ANDCSocials.App.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textColorHighlight">@color/transparent</item>
    </style>

    <style name="Theme.ANDCSocials.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ANDCSocials.popUpOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Drawer Item Style -->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

        <!-- Support library compatibility -->
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <!-- Navigation Drawer Style -->
    <style name="NavDrawerStyle" parent="Widget.Design.NavigationView">
        <item name="android:topRightRadius">25dp</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#AE000000</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:statusBarColor">@color/colorGradientStart</item>
    </style>

    <!-- Style to create Rounded Corner Buttons -->
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <!-- Style to create Rounded Corner Layouts -->
    <style name="Layout.RoundedCorners" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/rounded_layout_shape</item>
    </style>

    <!-- Text Input Layout Hint Text Style -->
    <style name="TextInputLayoutHintText">
        <item name="android:textColor">@color/white_translucent</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <!--item name="boxStrokeColor">@color/colorGradientStart</item-->
        <!--item name="boxCollapsedPaddingTop">15dp</item-->
    </style>

    <!-- Full Screen Container Style -->
    <style name="ThemeOverlay.ANDCSocials.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- Edit Text Auto Fill Highlighted Color -->
    <style name="EditText.AutoFilledHighlightColor" parent="Widget.AppCompat.EditText">
        <item name="android:autofilledHighlight">@color/transparent</item>
    </style>

