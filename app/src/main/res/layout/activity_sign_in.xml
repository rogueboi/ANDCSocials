<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:padding="15dp"
    android:background="@drawable/gradient_animation"
    android:id="@+id/signInLayout">

    <ImageView
        android:id="@+id/andcLogo"
        android:layout_width="69dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/andc_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Welcome to"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/andcLogo"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:fontFamily="@font/aladin"
        android:text="ANDC Socials!"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton1"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/crushed"
        android:text="Sign In"
        android:textSize="25sp"
        android:textStyle="bold"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        android:drawableLeft="@drawable/login"
        app:iconTint="@color/colorGradientStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton1"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crushed"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:icon="@drawable/register"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="@color/colorGradientStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="This app is still in development.\nRead the terms and condition to know more.\n\nDevelopers will not be responsible for any loss of data!"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton1" />

</androidx.constraintlayout.widget.ConstraintLayout>