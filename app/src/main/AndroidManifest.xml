<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andc.andcsocials">

    <application
        android:allowBackup="true"
        android:icon="@drawable/andc_logo"
        android:label="@string/app_name"
        android:logo="@drawable/andc_logo"
        android:roundIcon="@mipmap/andc_logo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ANDCSocials">
        <activity android:name=".RegisterSocietyInformation"></activity>
        <activity android:name=".AuthenticateEmail" />
        <activity android:name=".NeedHelp" />
        <activity android:name=".RegisterUserInformation" />
        <activity android:name=".RegisterPassword" />
        <activity android:name=".Register" />
        <activity android:name=".LogIn" />
        <activity
            android:name=".SignIn"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>